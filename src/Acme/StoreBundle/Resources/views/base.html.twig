<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/acmestore/css/bootstrap.min.css') }}" rel="stylesheet"
                  type="text/css"/>
            <link href="{{ asset('bundles/acmestore/css/bootstrap-theme.min.css') }}" rel="stylesheet"
                  type="text/css"/>
            <link href="{{ asset('bundles/acmestore/css/jquery-ui.min.css') }}" rel="stylesheet"
                  type="text/css"/> 
            <link href="{{ asset('bundles/acmestore/css/jquery-ui.theme.min.css') }}" rel="stylesheet"
                  type="text/css"/>              
            <link href="{{ asset('bundles/acmestore/css/main.css') }}" rel="stylesheet"
                  type="text/css"/>            
        {% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% if is_granted('ROLE_ADMIN') != false %}
        {% block quote %}
            <div class="quote_block_main">
                <div class="quote_block-container">
                    {{ render(controller('AcmeStoreBundle:Quote:getRamdomQuote')) }}                
                </div>
                <div class="quote_block_refresh_container">
                    <a id="quote_block_refresh" href="#" data-url="{{ path('authorquote_quote_random') }}">обновить</a>
                </div>
            </div>
        {% endblock %}
        {% endif %}
        <div class="container container-body">
            {% block menu %}
                {% include 'AcmeStoreBundle::menu.html.twig' %}
                {% endblock %}
            {% block body %}
                <h1>{{ controller }}</h1>
            {% block child %}{% endblock %} 
            {% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
        {% block script %}
            <script src="{{ asset('bundles/acmestore/js/jquery-1.12.0.min.js') }}"></script>            
            <script src="{{ asset('bundles/acmestore/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('bundles/acmestore/js/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('bundles/acmestore/js/quote.js') }}"></script>
        {% endblock %}        
    </body>
</html>

