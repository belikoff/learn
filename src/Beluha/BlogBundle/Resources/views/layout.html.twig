<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Beluha{% endblock %}</title>
        <meta name="description" content="{% block description %}Личный блог о путешествиях, web-разработке и о жизни{% endblock %}" />
        <meta name="keywords" content="{% block keywords %}Путешествия, web, html, css, javascript, php, symfony2{% endblock %}" />
        <meta name="author" content="{% block author %}beluha.pro{% endblock %}" />
        {% block stylesheets %}
    {% stylesheets '@BeluhaBlogBundle/Resources/public/css/bootstrap.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets '@BeluhaBlogBundle/Resources/public/css/bootstrap-theme.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}     
    {% stylesheets '@BeluhaBlogBundle/Resources/public/css/jquery-ui.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}  
    {% stylesheets '@BeluhaBlogBundle/Resources/public/css/jquery-ui.theme.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}  
    {% stylesheets '@BeluhaBlogBundle/Resources/public/css/main.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}                   
        {% endblock %}        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
            {% block menu %}
            {% endblock %}
            <div class="container">
                <div class="row">
                    <div class="col-md-3" id="leftCol">
                        {% block sidebar %}
                        {% endblock %}
                    </div>
                    <div class="col-md-9">
                    {% block body %}
                    {% endblock %}
                    </div>
                </div>
            </div>            



        {% block script %}
            {% javascripts
                '@BeluhaBlogBundle/Resources/public/js/jquery-1.12.0.min.js'
                '@BeluhaBlogBundle/Resources/public/js/bootstrap.min.js'
                '@BeluhaBlogBundle/Resources/public/js/jquery-ui.min.js'
                '@BeluhaBlogBundle/Resources/public/js/quote.js'%}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}        
    </body>
</html>


