{% extends "BeluhaBlogBundle::base.html.twig" %}

{% block title %}{{ 'post.plural' | trans }}{% endblock %}

{% block sidebar %}
    {{ parent() }}
    <aside>
        <h3>{{ 'post.latest' | trans }}</h3>
        {% for post in latestPosts %}
            <p><a href="{{ path('beluha_blog_post_show', { slug: post.slug })}}">{{ post.title }}</a></p>
            {% endfor %}
    </aside>
{% endblock %}
{% block section %}
    
    {% for post in posts %}
        {{ include('BeluhaBlogBundle:Post:_post.html.twig', {post: post}) }}
    {% endfor%}
    
{% endblock %}
