{% extends "BeluhaBlogBundle::base.html.twig" %}

{% block description %}{{ post.description }}{% endblock %}
{% block keywords %}{{ post.keywords }}{% for tag in post.tags %}, {{ tag.name }}{% endfor %}{% endblock %}
{% block author %} {{ parent() }}: {{ post.author.username }}{% endblock %}
{% block title %}{{ parent() }}: {{ post.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}  
<style type="text/css" media="screen">
 #post-container
 {
     position: relative;
     margin-bottom: 20px;
 }
    #editor { 
        position: relative;
        width: 640px;
        height: 500px;
        top: 0;
        right: 0;
        bottom: 0;
        left: 40;
    }
</style>    
{% endblock %}   



{% block sidebar %}
    {{ parent() }}
    <aside>
        <h3>{{ 'author.title' | trans }}</h3>
            <p><a href="#" title="{{ 'post.by.author' | trans({ '%name%': post.author.username }) }}">{{ post.author.username }}</a></p>
    </aside>
{% endblock %}

{% block section %}
    
    <article>
        <header>
            <h1>{{ post.title }}</h1>
            <p>{{ 'post.on' | trans }}
                <time datatime="{{ post.createdAt | date('c') }}">{{ post.createdAt | date}}</time>
            </p>
        </header>
            <div id="post-container">
                {{ post.body | raw | nl2br}}           
            <div>
    </article>
                {% for tag in post.tags %}
                    <a href="{{ path('blog_tag', { 'slug': tag.name }) }}">{{ tag.name }}</a>
                    {% endfor %}
            {#<a id="comments"></a>
            <h2>{{ 'comment.plural' | trans }}</h2>
            
            {% for comment in post.comments %}
                {{ include('CoreBundle:Post:_comment.html.twig', {comment: comment}) }}
            {% endfor %}
            
            <h4>{{ 'comment.write' | trans }}</h4>
            {{ form(form, {action: path('core_post_createcomment', {slug: post.slug}) ~ '#comments'})}}#}
{% endblock %}

{% block script %}
    {{ parent() }}
    <script src="{{ asset('bundles/BeluhaBlog/js/ace-builds-master/src-min-noconflict/ace.js') }}"></script>
    <script>
    $(function () {
        if($('#editor').length){
            var editor = ace.edit("editor");
            editor.setTheme("ace/theme/github");
            editor.getSession().setMode("ace/mode/php");
        }
    });
    </script>
{% endblock %}