{% extends "BeluhaBlogBundle::layout.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block sidebar %}
    <aside>
        <h3>{{ 'author.title' | trans }}</h3>
            <p><a href="{{ path('beluha_blog_author_show', { slug: post.author.slug })}}" title="{{ 'post.by.author' | trans({ '%name%': post.author.username }) }}">{{ post.author.username }}</a></p>
    </aside>
{% endblock %}

{% block section %}
    
    <article>
        <header>
            <h1>{{ post.title }}</h1>
            <p>{{ 'post.on' | trans }}
                <time datatime="{{ post.createdAt | date('c') }}">{{ post.createdAt | date}}</time>
            </p>
        </header>
            <p>

                {{ post.body | raw | nl2br}}
              
                
            </p>
    </article>
                {% for tag in post.tags %}
                    <a href="#">{{ tag.name }}</a>
                    {% endfor %}
            {#<a id="comments"></a>
            <h2>{{ 'comment.plural' | trans }}</h2>
            
            {% for comment in post.comments %}
                {{ include('CoreBundle:Post:_comment.html.twig', {comment: comment}) }}
            {% endfor %}
            
            <h4>{{ 'comment.write' | trans }}</h4>
            {{ form(form, {action: path('core_post_createcomment', {slug: post.slug}) ~ '#comments'})}}#}
{% endblock %}